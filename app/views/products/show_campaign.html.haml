.myrow.product
  .myrow
    .location
      = @product.store.location_name 
    .logo
      = image_tag(@product.store.logo_url, :width => '256')
    .clearfix
  .myrow.details-box
    .name
      = @product.name
    .description
      = @product.description
    .myrow.rating
      %h6 Rate this product
      - 5.times do
        = image_tag("star.png"  , :width => '30')
        &nbsp;

.row.related-products
  - @product.related_products.each do |rp|
    .rel-product
      = image_tag(rp.image_url, :width => "100%")
      .actions
        = link_to "Call Me", '', :id => "form_dialog",  :class => [:btn, :"btn-success"]
      #dialog_form{:style => 'text-align: center; margin-top: 5px;display:none'}
        %input{:product_id =>@product.id , :parent_product_id => rp.id}(type="text" name="number" value="" id="info")
        %hidden_field{:id=>"product_id", :value=>rp.id}
        %span.loading{:style => 'display:none'}
          = image_tag("loading.gif")
%span{:id=>"parent_product_id", :value=>@product.id}