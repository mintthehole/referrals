.myrow.product
  .myrow
    .location
      = @product.store.location_name 
    .logo
      = image_tag(@product.store.logo_url, :width => '256')
    .clearfix
  .myrow.details-box
    .name
      = @product.name
    .description
      = @product.description
    #star
      .myrow.rating
        %h6 Rate this product
        .rateit.bigstars{"data-rateit-starheight" => "32", "data-rateit-starwidth" => "32"}           
.row.related-products
  - @product.related_products.each do |rp|
    .rel-product
      = image_tag(rp.image_url, :width => "100%")
      .actions
        = link_to 'Contact Me', '#', :class => ["btn", "btn-success"]
